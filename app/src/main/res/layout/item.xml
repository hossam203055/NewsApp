<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/itemBackgroudColor">

    <TextView
        android:id="@+id/titleItemTextView"
        style="@style/titleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDimen"
        android:text="" />

    <TextView
        android:id="@+id/sectionItemTextView"
        style="@style/sectionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDimen" />

    <TextView
        android:id="@+id/dateItemTextView"
        style="@style/dateTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDimen" />
    <TextView
        android:id="@+id/pillerNameItemTextView"
        style="@style/pillerNameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDimen" />

    <TextView
        android:id="@+id/authorNameItemTextView"
        style="@style/authorNameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDimen" />

</LinearLayout>